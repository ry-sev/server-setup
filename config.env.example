# Server Configuration
# Copy this file to config.env and modify as needed

# Domain name for the website (required)
DOMAIN="example.com"

# Server IP address (optional - auto-detected if not set)
SERVER_IP=""

# Email for Let's Encrypt notifications (required for SSL)
ADMIN_EMAIL="admin@example.com"

# Deploy user for website management
DEPLOY_USER="deploy"

# Website root directory
WEB_ROOT="/var/www"

# SSH port (change from default 22 for security)
SSH_PORT="22"

# Timezone
TIMEZONE="UTC"

# Enable automatic security updates (yes/no)
AUTO_UPDATES="yes"

# Nginx worker processes (auto = number of CPU cores)
NGINX_WORKERS="auto"

# Rate limiting for nginx (requests per second)
NGINX_RATE_LIMIT="10"

# Fail2ban ban time in seconds (default: 1 hour)
FAIL2BAN_BANTIME="3600"

# Fail2ban max retries before ban
FAIL2BAN_MAXRETRY="5"
